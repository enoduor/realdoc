{
  "containerDefinitions": [
    {
      "name": "repostly-unified",
      "image": "657053005765.dkr.ecr.us-west-2.amazonaws.com/repostly-unified:latest",
      "cpu": 0,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        },
        {
          "containerPort": 4001,
          "hostPort": 4001,
          "protocol": "tcp"
        },
        {
          "containerPort": 5001,
          "hostPort": 5001,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "PORT",
          "value": "4001"
        },
        {
          "name": "NODE_ENV",
          "value": "production"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "secrets": [
        {
          "name": "MONGODB_URI",
          "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/mongodb-uri"
        },
        {
          "name": "CLERK_SECRET_KEY",
          "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/clerk-secret-key"
        },
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/openai-api-key"
        },
        {
          "name": "STRIPE_SECRET_KEY",
          "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/stripe-secret-key"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/repostly-unified",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD",
          "curl",
          "-f",
          "http://localhost:5001/ping"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      },
      "systemControls": []
    }
  ],
  "family": "repostly-unified",
  "executionRoleArn": "arn:aws:iam::657053005765:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "volumes": [],
  "placementConstraints": [],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "1024",
  "memory": "2048"
}
