# Node.js Backend Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY back/backend-node/package*.json ./
RUN npm ci --only=production

# Copy source code
COPY back/backend-node/ ./

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001

USER nodejs

EXPOSE 4001

CMD ["node", "index.js"]
