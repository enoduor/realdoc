{
  "family": "repostly-ai",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::657053005765:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "repostly-ai",
      "image": "657053005765.dkr.ecr.us-west-2.amazonaws.com/repostly-ai:latest",
      "essential": true,
      "portMappings": [ { "containerPort": 5001, "protocol": "tcp" } ],
      "secrets": [
        { "name": "OPENAI_API_KEY", "valueFrom": "/repostly/ai/OPENAI_API_KEY" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/repostly-ai",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}

