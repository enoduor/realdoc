{
  "family": "repostly-unified",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "4096",
  "executionRoleArn": "arn:aws:iam::657053005765:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::657053005765:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "repostly-unified",
      "image": "657053005765.dkr.ecr.us-west-2.amazonaws.com/repostly-unified:latest",
      "essential": true,
      "portMappings": [
        {"containerPort": 3000, "protocol": "tcp"},
        {"containerPort": 4001, "protocol": "tcp"},
        {"containerPort": 5001, "protocol": "tcp"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/repostly-unified",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {"name": "NODE_ENV", "value": "production"},
        {"name": "PORT", "value": "4001"},
        {"name": "AI_ROOT_PATH", "value": "/ai"}
      ],
      "secrets": [
        {"name": "MONGODB_URI", "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/api/MONGODB_URI"},
        {"name": "CLERK_SECRET_KEY", "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/api/CLERK_SECRET_KEY"},
        {"name": "CLERK_PUBLISHABLE_KEY", "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/api/CLERK_PUBLISHABLE_KEY"},
        {"name": "CLERK_ISSUER_URL", "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/api/CLERK_ISSUER_URL"},
        {"name": "OPENAI_API_KEY", "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/ai/OPENAI_API_KEY"},
        {"name": "STRIPE_SECRET_KEY", "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/api/STRIPE_SECRET_KEY"},
        {"name": "STRIPE_WEBHOOK_SECRET", "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/api/STRIPE_WEBHOOK_SECRET"},
        {"name": "STRIPE_STARTER_MONTHLY_PRICE_ID", "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/api/STRIPE_STARTER_MONTHLY_PRICE_ID"},
        {"name": "STRIPE_STARTER_YEARLY_PRICE_ID", "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/api/STRIPE_STARTER_YEARLY_PRICE_ID"},
        {"name": "STRIPE_CREATOR_MONTHLY_PRICE_ID", "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/api/STRIPE_CREATOR_MONTHLY_PRICE_ID"},
        {"name": "STRIPE_CREATOR_YEARLY_PRICE_ID", "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/api/STRIPE_CREATOR_YEARLY_PRICE_ID"},
        {"name": "STRIPE_PRO_MONTHLY_PRICE_ID", "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/api/STRIPE_PRO_MONTHLY_PRICE_ID"},
        {"name": "STRIPE_PRO_YEARLY_PRICE_ID", "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/api/STRIPE_PRO_YEARLY_PRICE_ID"},
        {"name": "FRONTEND_URL", "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/api/FRONTEND_URL"},
        {"name": "APP_URL", "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/api/APP_URL"},
        {"name": "FACEBOOK_APP_ID", "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/api/FACEBOOK_APP_ID"},
        {"name": "FACEBOOK_APP_SECRET", "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/api/FACEBOOK_APP_SECRET"},
        {"name": "FACEBOOK_REDIRECT_URI", "valueFrom": "arn:aws:ssm:us-west-2:657053005765:parameter/repostly/api/FACEBOOK_REDIRECT_URI"}
      ],
      "healthCheck": {
        "command": ["CMD", "curl", "-fsS", "http://localhost:4001/health"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}